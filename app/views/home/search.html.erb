<div class="container">

  <div class="row">
    
    <%
      memo = 0
      @imagearray.each do |t|
        memo += 1
        if memo != 1
    %>
    <div class="span3">
      <img src="<%= Image.find_by_id(t).url %>" alt="Image <%= t %>." />
      <%= Image.find_by_id(t).tags[0].keyword %>
    </div>
    <!-- .span3 -->
    
        <% else %>
    <div class="span12">
      <%= form_tag root_path, :method => "get" do %>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Search", :name => nil %>
      <% end %>
    </div>
    <!-- .span12 -->
    
    <div class="span3">
      <img src="<%= Image.find_by_id(t).url %>" alt="Image <%= t %>." />
      <%= Image.find_by_id(t).tags[0].keyword %>
    </div>
    <!-- .span3 -->
    
        <% end %>
    <% end %>
  </div>
  <!-- .row -->

</div>
<!-- .container -->