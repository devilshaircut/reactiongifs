<div class="container">

  <div class="row">

    <%= render "shared/search_form" %>
    
    <% if @searchresult == nil %>
      <p>No results.</p>
      
    <% else %>
      <% @searchresult.each do |r| %>
    <div class="span3 image-tile">
      <a href="<%= image_path(r) %>" class="thumb">
        <img src="<%= r.url %>" alt="<%= r.description %>" />
      </a>
      <!-- .thumb -->
        <% r.tags.each do |k| %>
      <%= link_to k.keyword, search_path + "?search=" + k.keyword + "&commit=Search", :class => "tag" %>
        <% end %>
    </div>
    <!-- .span3 .image-tile -->
    
      <% end %>
    <% end %>
    
  </div>
  <!-- .row -->

</div>
<!-- .container -->