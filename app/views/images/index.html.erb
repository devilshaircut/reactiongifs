<div class="container">

  <div class="row">
    
    <div class="row-clear">
      <div class="span6 offset3 search-form">
        <a href="<%= root_path %>"><h1><span>Reaction GIF</span> Database</h1></a>
        <%= form_tag search_path, :method => "get" do %>
          <%= text_field_tag :search, params[:search] %>
          <%= submit_tag "Search" %>
        <% end %>
      </div>
      <!-- .span6 .offset3 .search-form -->
    </div>
    <!-- .row-clear -->
    
    <% @images.each do |t| %>
    <div class="span3 image-tile">
      <div class="thumb">
        <img src="<%= t.url %>" alt="Image <%= t.id %>." />
      </div>
      <!-- .thumbnail -->
      <% t.tags.each do |k| %>
      <a href="#" class="tag"><%= k.keyword %></a>
      <% end %>
    </div>
    <!-- .span3 .image-tile -->
    <% end %>
  </div>
  <!-- .row -->

</div>
<!-- .container -->